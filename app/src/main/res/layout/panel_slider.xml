<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true" >

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"        
        android:text="Slider"
        android:textStyle="bold"
        android:tag="fonts/BebasNeue.otf"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/slider_caption_text_color" 
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/sliderLeftImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/sliderRightImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLabel"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/sliderRightImage"
        android:layout_toRightOf="@+id/sliderLeftImage"
        android:maxHeight="10000dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:progressDrawable="@drawable/slide_bar"
        android:thumb="@drawable/wite_circle"
        android:thumbOffset="5dp"        
        />

</RelativeLayout>