<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true" >

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Slider"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/slider_caption_text_color" />

    <ImageView
        android:id="@+id/sliderLeftImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/sliderRightImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLabel"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/sliderRightImage"
        android:layout_toRightOf="@+id/sliderLeftImage"
        android:maxHeight="@dimen/bars_height"
        android:minHeight="@dimen/bars_height"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:progressDrawable="@drawable/slide_bar"
        android:thumb="@drawable/wite_circle"
        android:thumbOffset="5dp" />

</RelativeLayout>